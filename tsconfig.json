{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es2015",
    "jsx": "react",
    "noImplicitAny": false,
    "removeComments": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipDefaultLibCheck": false,
    "strict": true,
    "lib": [ "es6", "dom" ],
    "types": [ "webpack-env" ],
    "paths": {
      "@app/*": [ "ClientApp/*" ],
      "@components/*": [ "ClientApp/components/*" ],
      "@middlewares/*": [ "ClientApp/middlewares/*" ]
    }
  },
  "exclude": [
      "bin",
      "node_modules"
  ]
}
